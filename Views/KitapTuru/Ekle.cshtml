@model KitapTuru

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Türü Ekle</h2>
            <hr />
        </div>
        <div class="mb-1">
            <label asp-for="Ad"></label>
            <input class="form-control" asp-for="Ad"/>
            <span class="text-danger" asp-validation-for="Ad"></span>
        </div>
        <button class="btn btn-success btn-lg mt-2" type="submit" style="border-radius: 10px">Ekle</button>
        <a class="btn btn-primary btn-lg mt-2" asp-controller="KitapTuru" asp-action="Index" style="border-radius: 10px">Geri Dön</a>
    </div>
</form>