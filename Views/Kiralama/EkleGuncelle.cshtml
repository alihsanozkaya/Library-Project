@model Kiralama

<form method="post">
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3">
                    <h2 class="text-primary">@(Model == null ? "Yeni Kiralama Ekle" : "Kiralama Güncelle")</h2>
                    <hr />
                </div>
                <div class="mb-1">
                    <label asp-for="OgrenciId"></label>
                    <input class="form-control" asp-for="OgrenciId" />
                    <span class="text-danger" asp-validation-for="OgrenciId"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="KitapId"></label>
                    <select class="form-select" asp-for="KitapId" asp-items="ViewBag.kitapList"></select>
                </div>
                @if (Model == null)
                {
                    <button class="btn btn-success btn-lg mt-2" type="submit" style="border-radius: 10px">Ekle</button>

                }
                else
                {
                    <button class="btn btn-success btn-lg mt-2" type="submit" style="border-radius: 10px">Güncelle</button>

                }
                <a class="btn btn-primary btn-lg mt-2" asp-controller="Kiralama" asp-action="Index" style="border-radius: 10px">Geri Dön</a>
            </div>
        </div>
        @if (Model != null)
        {
            <div class="col-2">
                <br>
                <br>
                <img src="@Model.Kitap.ResimUrl" width="100%" style="border-radius: 7px; border: 1px solid #bbb9b9" />
            </div>
        }
    </div>
</form>